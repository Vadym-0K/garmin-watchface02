<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <Button
        android:id="@+id/next_page_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/players_next_page_label"
        android:layout_alignParentBottom="true" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/next_page_button" >
    
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:padding="5dp" >
		 
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/players_number_label" />
		    
		    <Spinner
		        android:id="@+id/num_players_spinner"
		        android:layout_width="match_parent"
		        android:layout_height="43dp"
		        android:layout_marginBottom="10dp" />
		    
		    <TextView
		        android:id="@+id/player1_label"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/players_name_label" />
		    
		    <EditText
		        android:id="@+id/player1_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:inputType="textPersonName" />
		    
		    <TextView
		        android:id="@+id/player2_label"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/players_name_label" />
		    
		    <EditText
		        android:id="@+id/player2_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:inputType="textPersonName" />
		    
		    <TextView
		        android:id="@+id/player3_label"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/players_name_label" />
		    
		    <EditText
		        android:id="@+id/player3_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:inputType="textPersonName" />
		    
		    <TextView
		        android:id="@+id/player4_label"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/players_name_label" />
		    
		    <EditText
		        android:id="@+id/player4_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp"
		        android:inputType="textPersonName" />
		    
		</LinearLayout>
	
	</ScrollView>

</RelativeLayout>
